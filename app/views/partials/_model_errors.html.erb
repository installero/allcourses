<% if model.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col alert alert-dismissible fade show alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
          <strong>Fix <%= pluralize(model.errors.count, 'error') %>:</strong>
          <ul>
          <% model.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <% flash[:danger] = flash[:alert] if flash[:alert] %>
      <% flash[:info] = flash[:notice] if flash[:notice] %>
      <% flash.delete(:alert) %>
      <% flash.delete(:notice) %>
      <% flash.each do |key, value| %>
        <div class="alert  alert-dismissible fade show alert-<%= key %>" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
            <%= value %>
        </div>
      <%
        flash.delete(key)
        end %>
    </div>
  </div>
</div>
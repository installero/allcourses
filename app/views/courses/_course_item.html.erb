<div class="row">
  <div class="col-md-4">
    <p>
      <small class="badge badge-primary"><%= course.genre %></small>
      <small>added
        by <%= link_to course.creator.id, user_path(course.creator) %></small>
    </p>
    <p>
      <strong>
        <%= link_to course.title, course %>
      </strong>
      <%= link_to fa_icon('edit'), edit_course_path(course), title: 'Edit' %>
      <br>
      <small>By <%= link_to course.provider.title, course.provider.url %></small>
    </p>
  </div>

  <div class="col-md-5">
    <p>
      <small>
        Average rating: <%= course.rating %> <br>
        based on <%= course.ratings_count %> votes <br>
        Total reviews <%= course.reviews_count %> <br>
      </small>
    </p>
  </div>
</div>
<hr/>
